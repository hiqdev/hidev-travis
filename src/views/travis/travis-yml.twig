language: php
dist: trusty

php:
    - 5.4
    - 5.5
    - 5.6
    - 7.0
    - hhvm
    - hhvm-nightly

# run build against hhvm but allow them to fail
# http://docs.travis-ci.com/user/build-configuration/#Rows-That-are-Allowed-To-Fail
matrix:
    fast_finish: true
    allow_failures:
        - php: hhvm
        - php: hhvm-nightly

# faster builds on new travis setup not using sudo
sudo: false


# cache vendor dirs
cache:
    directories:
        - $HOME/.composer/cache

script:
    - hidev build
